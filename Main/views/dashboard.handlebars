<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-title">Post Title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
    
      <div class="form-group">
        <label for="comment-input">Comment:</label>
        <textarea class="form-input" id="comment-input" name="comment-input"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create post</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current posts:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{comment.id}}">{{comment.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
