<article>  
  <h2>
    Edit Post
  </h2>
  <form class="edit-blog-form">
    <div>
      <input name="blog-title" type="text" value="{{blog.title}}" />      
    </div>
    <div>
      Posted by you on {{format_date blog.created_at}}
      |
      {{blog.comments.length}} {{format_plural "comment" blog.comments.length}}
    </div>
    <div>
      <label for="blog-text">Post</label>
      <textarea id="blog-text" name="blog-text">{{blog.blog_text}}</textarea>
    </div>
    <button type="submit">Save Changes</button>
    <button type="button" class="delete-blog-btn">Delete Post</button>
  </form>
</article>


<script src="/javascript/edit-blog.js"></script>
<script src="/javascript/delete-blog.js"></script>