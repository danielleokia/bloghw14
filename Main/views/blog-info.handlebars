<article class="blog">
  <div class="blog-header">  
    <div class="title">
      <a href="/post/{{id}}">{{blog.title}}</a>
    </div>
    <div class="meta">
      Posted By {{user.username}} on {{format_date created_at}} | 
      {{comments.length}} {{format_plural "comment" comments.length}}
    </div>
  </div>
  <div class="blog-text">
    {{blog_text}}
  </div>
</article>